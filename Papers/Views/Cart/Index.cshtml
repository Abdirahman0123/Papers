@model IEnumerable<Papers.Models.Item>
@*model directive
    specifies that this view  is expecting a model object of type product*@


<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Product.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Product.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>Sub-total</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var cart in Model)
        {

            <tr>
                <td>@Html.DisplayFor(modelItem => cart.Product.Name)</td>
                <td>@Html.DisplayFor(modelItem => cart.Product.Price)</td>
                <td>@Html.DisplayFor(modelitem => cart.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => (cart.Subtotal)) </td>

                <td>

                    @Html.ActionLink("+", "Increase", "Cart", new { Id = cart.Product.Id }, new { @class = "btn btn-primary " })
                    @Html.ActionLink("-", "Decrease", "Cart", new { Id = cart.Product.Id }, new { @class = "btn btn-danger " })
                </td>

                <td>@Html.ActionLink(" ", "Remove", "Cart", new { Id = cart.Product.Id }, new { @class = "btn btn-danger fa fa-trash" })</td>


            </tr>

        }


        <tr>
            <td colspan="5" style="text-align:right">
                Total: @ViewBag.total.ToString("C2")

            </td>
        </tr>


    </tbody>

</table>
<div class="button-box col-lg-12" style="text-align:center">
    <a class="btn btn-primary" asp-controller="Product" asp-action="Index">Shop &raquo;</a>
    <a class="btn btn-primary" asp-controller="Checkout" asp-action="Index">Checkout</a>

</div>
